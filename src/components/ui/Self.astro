---
import { profile } from "@/settings";
const { fullName, title } = profile;
---
<div class="self">
	<h1 class="name"><span>{fullName}</span></h1>
	<h2 class="title">{title}</h2>
</div>
<style>
	.self {
		display:flex;
		flex-direction: column;
		place-items: center center;
	}
	h1.name {
		font-weight: 400;
		font-size: 2.5rem;
		margin-top: 8px;
		margin-bottom: 8px;
		text-align: center;
	}

	h2.title {
		font-family: 'Gudea', sans-serif;
		font-weight: 200;
		font-size: 1.03rem;
		margin: 0px 0;
		color:#888;
	}
</style>
