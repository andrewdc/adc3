---
// Pass an array of image paths as props
const { images = [] } = Astro.props;
---

<div class="gallery">
	{images.map((img) => <img src={img} alt="Gallery image" loading="lazy" />)}
</div>

<style>
	.gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
		padding: 1rem;
	}

	.gallery img {
		width: 100%;
		height: auto;
		border-radius: 0.5rem;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease;
	}

	.gallery img:hover {
		transform: scale(1.05);
	}
</style>
